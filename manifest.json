{
  "manifest_version": 3,
  "name": "Twitter List Quick Add",
  "version": "1.0",
  "description": "Quickly add users to Twitter lists while browsing",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
